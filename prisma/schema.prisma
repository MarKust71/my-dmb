generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// enum UserRole {
//   USER
//   ADMIN
// }

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? //@db.Text
  access_token      String? //@db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? //@db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String?   @default("USER") //@default(UserRole.USER)
  accounts      Account[]
}

model Customer {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String
  email     String
  context   String
  consent   DateTime?

  @@unique([email, context])
}

model MraContext {
  id             String           @id @default(cuid())
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  contextId      String
  name           String
  MraApplication MraApplication[]

  @@unique([contextId])
}

model MraApplication {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lastname  String
  firstname String
  email     String
  phone     String
  postcode  String
  city      String?
  address   String?
  birthDate DateTime?
  height    Int?
  weigth    Int?
  consent   DateTime?
  contextId String

  context MraContext @relation(fields: [contextId], references: [id], onDelete: Cascade)

  @@unique([email, contextId])
}
